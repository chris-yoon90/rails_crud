<% if @text.errors.any? %>
	<div id="errors">
		<h2> <%= pluralize(@text.errors.count, "error") %> occured! </h2>
		<ul>
			<% @text.errors.full_messages.each do |errorMsg| %>
			<li> <%= errorMsg %> </li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for @text  do |f| %>
	<p>
		<%= f.label :author, "Author:" %>  <br />
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :body, "Body:" %> <br />
		<%= f.text_area :body %> 
	</p>
	<p>
	<%= f.submit "Submit" %>
	</p>
<% end %>